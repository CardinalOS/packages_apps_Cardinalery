<resources>
    <!-- Text Styles -->
    <style name="cardinaleryTextPrimary">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
    </style>

    <style name="cardinaleryTextPrimaryMedium" parent="cardinaleryTextPrimary">
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="cardinaleryTextSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Dashboard -->
    <style name="cardinaleryDashboardPreferenceSingle" parent="cardinaleryPreferenceSingle">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="cardinaleryDashboardPreferenceTop" parent="cardinaleryPreferenceTop">
        <item name="android:layout_marginTop">@dimen/cardinalery_pref_horizontal_padding</item>
    </style>

    <style name="cardinaleryDashboardPreferenceBottom" parent="cardinaleryPreferenceBottom">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="cardinaleryDashboardPreferenceFull" parent="cardinaleryPreferenceFull">
        <item name="android:layout_marginTop">@dimen/cardinalery_pref_horizontal_padding</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="cardinaleryDashboardPreferenceFullAccent" parent="cardinaleryDashboardPreferenceFull">
        <item name="android:background">@drawable/cardinalery_preference_background_full_accent</item>
    </style>

    <style name="cardinaleryDashboardPreferencePhone" parent="cardinaleryDashboardPreferenceTop">
        <item name="android:background">@drawable/cardinalery_preference_background_phone</item>
    </style>

    <!-- General -->
    <style name="cardinaleryPreferenceSingle" parent="cardinaleryPreferenceBase">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/cardinalery_preference_background_single</item>
    </style>

    <style name="cardinaleryPreferenceBase">
        <item name="android:layout_marginStart">@dimen/cardinalery_pref_horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/cardinalery_pref_horizontal_padding</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="cardinaleryPreferenceTop" parent="cardinaleryPreferenceBase">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/cardinalery_preference_background_top</item>
    </style>

    <style name="cardinaleryPreferenceMiddle" parent="cardinaleryPreferenceBase">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/cardinalery_preference_background_middle</item>
    </style>

    <style name="cardinaleryPreferenceBottom" parent="cardinaleryPreferenceBase">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/cardinalery_preference_background_bottom</item>
    </style>

    <style name="cardinaleryPreferenceFull" parent="cardinaleryPreferenceBase">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/cardinalery_preference_background_full</item>
    </style>

    <style name="cardinaleryPreferenceFullAccent" parent="cardinaleryPreferenceBase">
        <item name="android:layout_marginTop">@dimen/cardinalery_pref_horizontal_padding</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/cardinalery_preference_background_full_accent</item>
    </style>
</resources>
